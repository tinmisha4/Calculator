print("Калькулятор")
a = int(input("Введите первое число"))
b = int(input("Введите второе число"))
c = input("Введите операцию")

if c == "+":
    print("Результат:", a + b)
elif c == "-":
    print("Результат:", a - b)
elif c == "/":
    print("Результат:", a / b)
elif c == "*":
    print("Результат:", a * b)
else:
    print("Введите верную операцию")

